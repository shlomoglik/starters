{
  "name": "starter",
  "version": "0.0.1",
  "description": "some useful files for starter project in mithril",
  "main": "app.js",
  "scripts": {
    "dev:watch": "webpack -d --config webpack.dev.js --watch",
    "prod": "webpack --config webpack.prod.js",
    "size": "webpack -p --config ‏‏webpack.size.js",
    "open": "start chrome  http://localhost:3000 ",
    "sass:watch": "node-sass src/sass/main.scss src/style.css -w",
    "start": "npm-run-all --parallel sass:watch dev:watch",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' src/sass/style.css -o public/style.prefix.css",
    "compress:css": "node-sass public/style.prefix.css public/style.comp.css --output-style compressed",
    "build:css": "npm-run-all  prefix:css compress:css"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "css-loader": "^1.0.0",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.22.1",
    "webpack": "^4.16.5",
    "webpack-bundle-analyzer": "^2.13.1",
    "webpack-cli": "^3.1.0"
  },
  "dependencies": {
    "firebase": "^6.0.1",
    "firebase-tools": "^6.9.1",
    "mithril": "^1.1.6"
  }
}
